datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 1. EL USUARIO (El dueño de los datos)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique  
  password  String            
  name      String?
  
  categories Category[]
  transactions Transaction[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. LAS CATEGORÍAS (Comida, Carro, Sueldo...)
model Category {
  id    Int     @id @default(autoincrement())
  name  String
  icon  String?
  budgetLimit Decimal @default(0) @db.Decimal(10, 2) 
  
  userId Int
  user   User @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@unique([name, userId]) 
}

// 3. LAS TRANSACCIONES (El gasto o ingreso real)
model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Decimal  @db.Decimal(10, 2) // Usamos Decimal para dinero, NUNCA Float (por precisión)
  date      DateTime // Aquí guardamos la fecha exacta (el mes se calcula solo)
  concept   String   // Ej: "Caffenio", "Gasolina"
  
  // Tipo de movimiento (Usamos un Enum, ver abajo)
  type      TransactionType

  // Relaciones
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

// 4. ENUMERADORES (Listas cerradas de opciones)
// Esto evita que escribas "Ingresos" con s y "Ingreso" sin s. Solo permite estas opciones.
enum TransactionType {
  INCOME  // Ingreso
  EXPENSE // Egreso
}